<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.softsociety.testboot.dao.StudyCourseDAO">

<!-- 학습페이지에서 입문편 리스트 조회-->
<select id="introdutionAll" resultType="TestLessonVO">
	select * 
	from  test_lesson
</select>

<!-- 학습페이지에서 특정 슬라이드 목록을 조회 -->
<select id="selectContents" parameterType="int" resultType="ContentsVO">
	select * 
	from prolingo_contents
	where lesson_id = #{lessonid}
	order by lesson_slide
</select>

</mapper>